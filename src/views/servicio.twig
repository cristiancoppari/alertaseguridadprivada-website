{% extends 'layout.twig' %}

{% block body %}

  {% include "./modules/header.twig" %}

  {% import "./modules/hero.twig" as heroUtils %}
  {{ heroUtils.heroBanner(hero) }}

  <section class="servicio container">
    <h2 class="secondary-title">{{section1.title}}</h2>

    <h3>{{section1.subtitle}}</h3>

    <div class="servicio__item">
      <h1>{{section1.content.title}}</h1>

      {% for text in section1.content.text %}
        <p class="servicio__text">{{text}}</p>
      {% endfor %}

      <div class="accordion" id="accordion-alertas">
      {% for item in section1.content.items %}
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{item.id}}" aria-expanded="true" aria-controls="{{item.id}}">
              {{item.label}}
            </button>
          </h2>
          <div id="{{item.id}}" class="accordion-collapse collapse show" aria-labelledby="headingOne">
            <div class="accordion-body">
              <p>{{item.text}}</p>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>

    {% if section2 %}
    <div class="servicio__carousel-section">
      <h2>{{section2.title}}</h2>

      {% for text in section2.texts %}
        <p class="text">{{text}}</p>
      {% endfor %}

      <section class="splide" id="serviciosCarousel">
        <div class="splide__track">
          <ul class="splide__list">
            {% for image in section2.carousel.images %}
            <li class="splide__slide">
              <div class="image">
                <img src="{{image}}" alt="Alertas Seguridad Privada">
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
      </section>
    {% endif %}
      
    </div>
  </section>

  <section class="estamos-para-ayudarte">
    <div class="estamos-para-ayudarte__container container">
      <h2>{{ estamosParaAyudarte.title }}</h2>

      <p>{{ estamosParaAyudarte.text }}</p>

      <a class="alertas-btn-primary" href="{{ estamosParaAyudarte.cta.link }}">{{ estamosParaAyudarte.cta.label }}</a>
    </div>
  </section>

  {% include "./modules/footer.twig" %}

  <a class="btn-whatsapp" href="https://wa.me/5491135605012">
    <img src="/images/icon-whatsapp.webp" alt="">
  </a>
{% endblock %}
